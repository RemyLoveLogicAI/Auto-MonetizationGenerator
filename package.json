{
  "name": "webapp",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "node scripts/gen-version.cjs && node scripts/gen-dashboards.cjs",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "gen:dashboards": "node scripts/gen-dashboards.cjs",
    "test": "echo 'No tests specified yet' && exit 0",
    "lint": "echo 'No linting configured yet' && exit 0",
    "audit": "npm audit --audit-level moderate",
    "start:prod": "pm2 start ecosystem.config.cjs",
    "stop:prod": "pm2 stop webapp",
    "restart:prod": "pm2 restart webapp",
    "logs": "pm2 logs webapp",
    "health": "curl -f http://localhost:3000/api/health || echo 'Health check failed'"
  },
  "dependencies": {
    "hono": "^4.6.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "typescript": "^5.6.2",
    "vite": "^5.4.2",
    "wrangler": "^3.78.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}